<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/dialog_ll">
  <TextView
    style="@style/dialog_title"
    android:id="@+id/title"/>
  <ScrollView
    style="@style/dialog_scroll_view"
    android:paddingBottom="5dp"
    android:id="@+id/scrollview">
    <LinearLayout
      style="@style/dialog_inner_ll"
      android:id="@+id/ll_inside_scrollview">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/dialog_tiny_text"
        android:textSize="19sp"
        android:paddingBottom="10dp"
        android:textColor="@color/greyText"
        android:id="@+id/intro"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/dialog_tiny_text"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:textColor="@color/greyText"
        android:id="@+id/num_of_attributions"/>
    </LinearLayout>
  </ScrollView>
  <include layout="@layout/dialog_two_buttons"/>
  
</LinearLayout>
		